<!--view/healthEntries.ejs-->

<%- include("partials/head.ejs") %>
<%- include("partials/header.ejs") %>

<h2>Health Entries List</h2>

<!-- Add New Health Entry Button -->
<div style="margin-bottom: 20px;">
    <a href="/healthEntries/form">
        <button type="button" class="btn btn-primary">Add New Health Entry</button>
    </a>
</div>

<!-- Health Entries Table with Filters in Headers -->
<form method="GET" action="/healthEntries" style="display:inline;">
    <table id="healthEntries-table" class="table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Blood Sugar Level, mg/dL</th>
            <th>Medications Taken</th>
            <th>Physical Activity Log</th>
            <th>Meal Log</th>
            <th>Notes</th>
            <th colspan="3">Actions</th> <!-- Actions Column Grouped -->
        </tr>
        <tr id="healthEntries-table-header">
            <!-- Date Filter in Header -->
            <th>
                <input type="date" class="form-control" name="date" placeholder="Filter by Date" value="<%= dateFilter || '' %>">
            </th>
            <!-- Time Filter in Header -->
            <th>
                <input type="time" class="form-control" name="timeFrom" placeholder="From Time" value="<%= timeFromFilter || '' %>">
                <input type="time" class="form-control" name="timeTo" placeholder="To Time" value="<%= timeToFilter || '' %>">
            </th>
            <!-- Blood Sugar Level Filter in Header -->
            <th>
                <input type="number" class="form-control" name="bloodSugarLevel" placeholder="Filter by Blood Sugar" value="<%= bloodSugarFilter || '' %>">
            </th>
            <!-- Medications Filter in Header -->
            <th>
                <input type="text" class="form-control" name="medicationsTaken" placeholder="Filter by Medications" value="<%= medicationsFilter || '' %>">
            </th>
            <!-- Physical Activity Filter in Header -->
            <th>
                <input type="text" class="form-control" name="physicalActivity" placeholder="Filter by Activity" value="<%= activityFilter || '' %>">
            </th>
            <!-- Meal Log Filter in Header -->
            <th>
                <input type="text" class="form-control" name="mealLog" placeholder="Filter by Meal" value="<%= mealLogFilter || '' %>">
            </th>
            <!-- Notes Filter in Header -->
            <th>
                <input type="text" class="form-control" name="notes" placeholder="Filter by Notes" value="<%= notesFilter || '' %>">
            </th>
            <th colspan="3">
                <!-- Apply Filters Button -->
                <button type="submit" class="btn btn-info" style="margin-top: 5px;">Apply Filters</button>
                <!-- Reset Filters Button -->
                <a href="/healthEntries" class="btn btn-secondary" style="margin-top: 5px;">Reset Filters</a>
            </th>
        </tr>
        </thead>
        <tbody>
        <% if (healthEntries && healthEntries.length) { %>
            <% healthEntries.forEach((entry) => { %>
                <tr>
                    <td><%= entry.date.toDateString() %></td>
                    <td>
                        <% if (entry.time) { %>
                            <%= entry.time %>
                        <% } else { %>
                            No time logged
                        <% } %>
                    </td>
                    <td><%= entry.bloodSugarLevel %></td>
                    <td>
                        <% if (entry.medicationsTaken && entry.medicationsTaken.length) { %>
                            <p><%= entry.medicationsTaken %></p>
                        <% } else { %>
                            No medications listed
                        <% } %>
                    </td>
                    <td>
                        <% if (entry.physicalActivityLog && entry.physicalActivityLog.length) { %>
                            <p><%= entry.physicalActivityLog %></p>
                        <% } else { %>
                            No activity logged
                        <% } %>
                    </td>
                    <td>
                        <% if (entry.mealLog && entry.mealLog.length) { %>
                            <p><%= entry.mealLog %></p>
                        <% } else { %>
                            No meal logged
                        <% } %>
                    </td>
                    <td>
                        <% if (entry.notes && entry.notes.length) { %>
                            <p><%= entry.notes %></p>
                        <% } else { %>
                            No notes
                        <% } %>
                    </td>
                    <td>
                        <a href="/healthEntries/<%= entry.id %>">
                            <button type="button" class="btn btn-info">Show</button>
                        </a>
                    </td>
                    <td>
                        <a href="/healthEntries/form/<%= entry.id %>">
                            <button type="button" class="btn btn-warning">Edit</button>
                        </a>
                    </td>
                    <td>
                        <form method="POST" action="/healthEntries/delete/<%= entry.id %>?page=<%= currentPage %>&limit=<%= limit %>&date=<%= dateFilter %>&bloodSugarLevel=<%= bloodSugarFilter %>&medicationsTaken=<%= medicationsFilter %>&physicalActivity=<%= activityFilter %>&mealLog=<%= mealLogFilter %>&notes=<%= notesFilter %>&timeFrom=<%= timeFromFilter %>&timeTo=<%= timeToFilter %>" style="display:inline;" id="delete-form-<%= entry.id %>">
                            <input type="hidden" name="_csrf" value="<%= _csrf %>">
                            <button type="submit" class="btn btn-danger delete-button">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="10" class="text-center">No health entries found. Click the "Add New Health Entry" button above to create one!</td>
            </tr>
        <% } %>
        </tbody>
    </table>
</form>

<!-- Pagination Controls -->
<div class="pagination">
    <% if (hasPrevPage) { %>
        <a href="/healthEntries?page=<%= currentPage - 1 %>&limit=<%= limit %>&date=<%= dateFilter %>&bloodSugarLevel=<%= bloodSugarFilter %>&medicationsTaken=<%= medicationsFilter %>&physicalActivity=<%= activityFilter %>&mealLog=<%= mealLogFilter %>&notes=<%= notesFilter %>&timeFrom=<%= timeFromFilter %>&timeTo=<%= timeToFilter %>" class="btn btn-secondary">Previous</a>
    <% } else { %>
        <button class="btn btn-secondary" disabled>Previous</button>
    <% } %>

    <span>Page <%= currentPage %> of <%= totalPages %></span>

    <% if (hasNextPage) { %>
        <a href="/healthEntries?page=<%= currentPage + 1 %>&limit=<%= limit %>&date=<%= dateFilter %>&bloodSugarLevel=<%= bloodSugarFilter %>&medicationsTaken=<%= medicationsFilter %>&physicalActivity=<%= activityFilter %>&mealLog=<%= mealLogFilter %>&notes=<%= notesFilter %>&timeFrom=<%= timeFromFilter %>&timeTo=<%= timeToFilter %>" class="btn btn-secondary">Next</a>
    <% } else { %>
        <button class="btn btn-secondary" disabled>Next</button>
    <% } %>
</div>

<!-- Script to add confirmation before deleting a health entry -->
<script>
    // Attach click event listeners to all delete buttons
    document.querySelectorAll('.delete-button').forEach(button => {
        button.addEventListener('click', function(event) {
            // Show confirmation dialog
            const confirmation = confirm("Are you sure you want to delete this health entry?");
            if (!confirmation) {
                // Prevent form submission if the user cancels
                event.preventDefault();
            }
        });
    });
</script>

<%- include("partials/footer.ejs") %>
